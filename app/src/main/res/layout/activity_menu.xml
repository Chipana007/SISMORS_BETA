<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.horus.interfazinicio.MenuActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:srcCompat="@drawable/code"
        android:id="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_weight="0.32" />

    <TextView
        android:text="ELIGE UNA DE LAS SIGUIENTE OPCIONES"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:textColor="#ff0101"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textSize="19sp"
        android:textColorLink="@color/colorPrimary"
        android:layout_weight="0.59" />
    <Button
        android:text="SCANEAR BARCODE O QR"
        android:layout_weight="1"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginBottom="5dp"
        android:onClick="EscanerQR" />
    <Button
        android:text="VIDEO TUTORIAL"
        android:textColor="#fff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tutorial"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="5dp" />
    <Button
        android:text="SALIR"
        android:textColor="#fff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/salir"
        android:background="@color/colorAccent"
        android:layout_marginBottom="5dp" />
</LinearLayout>
